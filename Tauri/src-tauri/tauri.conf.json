{
    "build": {
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:3000",
        "distDir": "../build"
    },
    "package": {
        "productName": "monster-controller",
        "version": "0.0.9"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            }
        },
        "windows": [
            {
                "title": "Monster Controller",
                "width": 1400,
                "height": 1000
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.jj.monster",
            "icon": [
                "icons/64x64.ico",
                "icons/128x128.ico",
                "icons/256x256.ico"
            ]
        }
    }
}